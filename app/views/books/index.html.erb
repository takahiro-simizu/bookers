<%= flash[:destroyed] %>

<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |a| %>
    <tr>
      <td><%= a.title %></td>
      <td><%= a.body %></td>
      <td><%= link_to "Show", book_path(a.id) %></td>
      <td><%= link_to "Edit", edit_book_path(a.id) %></td>
      <td><%= link_to "destroy", book_path(a.id), method: :delete %></td
    </tr>

  <% end %>
  </tbody>
</table>

<div class="form">
  <h3>New Book</h3>
  <%= form_with model:@book, local:true do |f| %>
  <h6>Title</h6>
  <%= f.text_field :title %>
  <h6>Body</h6>
  <%= f.text_area :body %>
   <div class="action">
     <%= f.submit 'Create Book' %>
   </div>
</div>

<% end %>
